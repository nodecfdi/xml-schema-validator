{
    "name": "@nodecfdi/xml-schema-validator",
    "version": "1.1.0",
    "description": "Librer√≠a para validaciones de XML con Esquemas XSD",
    "keywords": [
        "cfdi",
        "validaciones",
        "xml",
        "sat",
        "xsd",
        "schema"
    ],
    "private": false,
    "author": "OcelotlStudio <contacto@ocelotlstudio.com>",
    "license": "MIT",
    "type": "module",
    "main": "./dist/prod/xml-schema-validator.cjs",
    "module": "./dist/prod/xml-schema-validator.modern.js",
    "exports": {
        "require": "./dist/prod/xml-schema-validator.cjs",
        "development": "./dist/dev/xml-schema-validator.modern.js",
        "default": "./dist/prod/xml-schema-validator.modern.js"
    },
    "types": "./dist/types/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "lint": "eslint --fix \"src/**/\"",
        "lint:check": "eslint \"src/**/\"",
        "lint:ci": "pnpm lint:check",
        "test": "jest --verbose --runInBand --coverage",
        "test:watch": "jest --watch",
        "test:ci": "jest --runInBand --ci",
        "test:ci:coverage": "jest --runInBand --ci --coverage --coverageDirectory=coverage",
        "build:prod": "cross-env NODE_ENV=production microbundle --tsconfig ./tsconfig.json --target node --format modern,cjs --output dist/prod/xml-schema-validator.js",
        "build:dev": "cross-env NODE_ENV=development microbundle --define process.env.NODE_ENV=development --tsconfig ./tsconfig.json --target node --generateTypes false --format modern --output dist/dev/xml-schema-validator.js",
        "build": "rm -rf ./dist && pnpm build:dev && pnpm build:prod",
        "gen:docs": "rm -rf ./docs && typedoc --options typedoc.cjs",
        "prepublishOnly": "pnpm build",
        "prepare": "husky install",
        "release": "pnpm run prepublishOnly && pnpm changeset publish"
    },
    "repository": "https://github.com/nodecfdi/xml-schema-validator",
    "bugs": {
        "url": "https://github.com/nodecfdi/xml-schema-validator/issues"
    },
    "homepage": "https://github.com/nodecfdi/xml-schema-validator",
    "devDependencies": {
        "@babel/core": "^7.18.9",
        "@babel/preset-env": "^7.18.9",
        "@babel/preset-typescript": "^7.18.6",
        "@changesets/cli": "^2.24.1",
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "@types/jest": "^29.0.0",
        "@types/node": "^18.6.1",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "@xmldom/xmldom": "^0.8.2",
        "babel-plugin-dev-expression": "^0.2.3",
        "babel-plugin-transform-define": "^2.0.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.20.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-jest": "^26.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-tsdoc": "^0.2.16",
        "husky": "^8.0.1",
        "jest": "^29.0.0",
        "jest-mock-console": "^2.0.0",
        "jest-watch-typeahead": "^2.0.0",
        "jest-xml-matcher": "^1.2.0",
        "lint-staged": "^13.0.3",
        "microbundle": "^0.15.0",
        "prettier": "^2.7.1",
        "shx": "^0.3.4",
        "typedoc": "^0.23.9",
        "typedoc-theme-hierarchy": "^3.0.0",
        "typescript": "^4.7.4",
        "zx": "^7.0.7"
    },
    "dependencies": {
        "@nodecfdi/cfdiutils-common": "^1.2.1",
        "libxmljs2": "^0.30.1",
        "xpath": "^0.0.32"
    },
    "engines": {
        "node": ">= 14.0.0"
    }
}
